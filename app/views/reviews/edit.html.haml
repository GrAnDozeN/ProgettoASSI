-#Navigation Bar
%nav.navbar.navbar-dark.bg-dark
    %a{:style=>'color: white', :href=>'#'} Logo
    -#Elemento a destra
    %div
        -#Mostra il nome dell'utente
        %span{:style=>'color: white', :href=>'#'}Salve #{@currentUser.name}
        -#Mostra il bottone per il Logout
        %button.btn.btn-light{:style=>'margin-left: 10px'} 
            #{link_to 'Logout', logout_path, {:style=>'color: #007bff; text-decoration: none; font-weight: bold'}}
            %span.fa.fa-sign-out

%div.container-fluid{:style=>'margin:0; margin-top: 10px; text-align:center'}

    %h2{:style=>'margin-bottom: 50px;'} Modify #{@review.id}

    %div.container{:style=>'background-color: lightgrey; border: solid 25px lightgrey; border-radius: 25px; box-shadow: 0 0 30px black; max-width: 600px '}
        = form_tag music_review_path(@review), :method => :put do

            %div.form-group
                = label :review, :musicman, 'musicman', style:"font-weight: bold"
                = text_field :review, :musicman, class:'form-control', style:'max-width: 500px; margin-left:auto; margin-right:auto; text-align: center', required:'true'


            %div.form-group
                =label :review, :comments, 'comments', style:"font-weight: bold"
                =text_field :review, :comments, class:'form-control', style:'max-width: 500px; margin-left:auto; margin-right:auto; text-align: center', required:'true'


            =submit_tag 'Save Changes'
