.container{:style => "margin-top: 20px"}
    = form_tag contact_path, :method => :post do

        %h1.text-center Send a messege to the developers
        .row{:style => "margin-top :50px"}
            .col-sm.text-center
                
                %select.selectpicker{"data-live-search" => "true", "name" => "send[msgType]"} 
                    %optgroup{:label => "Tracks"}
                        %option Track not appropriete
                        %option Wrong data for a track
                    %optgroup{:label => "Comments"}
                        %option Inappropriate comment
                    %optgroup{:label => "Features"}
                        %option Suggest a Feature

        .row{:style => "margin-top :50px"}
